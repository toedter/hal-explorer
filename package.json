{
  "name": "hal-explorer",
  "version": "2.2.2.snapshot",
  "license": "MIT",
  "repository": "https://github.com/toedter/hal-explorer",
  "bugs": "https://github.com/toedter/hal-explorer/issues",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:fs": "concurrently \"node test-server.js\" \"ng serve\" --kill-others --success first",
    "build": "ng build --configuration production",
    "test": "vitest",
    "test:headless": "vitest run --coverage",
    "test:headless-watch": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "ng lint",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss,json}\"",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:report": "playwright show-report",
    "test-server": "node test-server.js",
    "prepare": "husky",
    "prepare:release": "node prepare-release.js"
  },
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "bootstrap": "^5.3.8",
    "core-js": "^3.47.0",
    "http-status-codes": "^2.3.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "uri-templates": "^0.2.0",
    "webdriver-manager": "^12.1.9",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.0",
    "@angular-devkit/core": "^21.0.3",
    "@angular-devkit/schematics": "^21.0.3",
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.6",
    "@angular/language-service": "^21.0.6",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@popperjs/core": "^2.11.8",
    "@types/node": "^25.0.3",
    "@types/uri-templates": "^0.1.34",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "angular-eslint": "21.1.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.39.2",
    "express": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "ts-node": "~10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.53.0",
    "vitest": "^4.0.16"
  },
  "author": {
    "name": "Kai Toedter",
    "email": "kai@toedter.com",
    "url": "https://toedter.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js,json,css,scss,html}": [
      "prettier --write"
    ]
  },
  "private": true
}

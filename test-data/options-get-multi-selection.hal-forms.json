{
  "_links": {
    "self": {
      "href": "http://localhost:3000/options-get-multi-selection.hal-forms.json"
    }
  },
  "_templates": {
    "search": {
      "title": "Search Items",
      "method": "GET",
      "target": "http://localhost:3000/items",
      "properties": [
        {
          "name": "sort",
          "prompt": "Sort Order",
          "type": "text",
          "options": {
            "promptField": "prompt",
            "valueField": "value",
            "minItems": 0,
            "maxItems": 5,
            "inline": [
              {
                "value": "name,asc",
                "prompt": "Name (ascending)"
              },
              {
                "value": "name,desc",
                "prompt": "Name (descending)"
              },
              {
                "value": "date,asc",
                "prompt": "Date (ascending)"
              },
              {
                "value": "date,desc",
                "prompt": "Date (descending)"
              }
            ]
          }
        },
        {
          "name": "filter",
          "prompt": "Filter",
          "type": "text"
        }
      ]
    }
  }
}

